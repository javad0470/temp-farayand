                <ViewAdmin:DefLvlAcs MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type ContentControl}}}" />

            </DataTemplate>

            <DataTemplate DataType="{x:Type VMEntity:DefItmsViewModel}">

                <ViewEntity:DefItms MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type ContentControl}}}" />

