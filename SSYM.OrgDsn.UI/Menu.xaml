                <ViewEntity:DefPsnInsideOrg MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=ContentControl}}" />

            </DataTemplate>

            <DataTemplate DataType="{x:Type VMEntity:DefPsnOutsideOrgViewModel}">

                <ViewEntity:DefPsnOutsideOrg MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=ContentControl}}" />

            </DataTemplate>-->

            <!--<DataTemplate DataType="{x:Type VMEntity:DefRolIsdOrgViewModel}">

                <ViewEntity:DefRolIsgOrg MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=ContentControl}}" />

