            <DataTemplate DataType="{x:Type VMRpot:MainReportMenuViewModel}">
                <ViewRpot:ucRpotMainMenu MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type ContentControl}}}" />
            </DataTemplate>

            <!--<DataTemplate DataType="{x:Type VMRpot:RpotPfrViewModel}">
                <ViewRpot:RpotPfr />
