            <Storyboard x:Key="HideMnuStoryBoard">

                <ObjectAnimationUsingKeyFrames BeginTime="00:00:00"
                                               Storyboard.TargetName="brdrMnu"
                                               Storyboard.TargetProperty="(UIElement.Visibility)">
                    <DiscreteObjectKeyFrame KeyTime="00:00:00"
                                            Value="{x:Static Visibility.Collapsed}" />

                </ObjectAnimationUsingKeyFrames>

            </Storyboard>

            <Storyboard x:Key="ShowMnuStoryBoard">

                <ObjectAnimationUsingKeyFrames BeginTime="00:00:00"
                                               Storyboard.TargetName="brdrMnu"
                                               Storyboard.TargetProperty="(UIElement.Visibility)">
                    <DiscreteObjectKeyFrame KeyTime="00:00:00"
                                            Value="{x:Static Visibility.Visible}" />

                </ObjectAnimationUsingKeyFrames>

            </Storyboard>

            <Storyboard x:Key="ShowDtlStoryBoard">

                <ObjectAnimationUsingKeyFrames BeginTime="00:00:00"
                                               Storyboard.TargetName="brdrDtl"
                                               Storyboard.TargetProperty="(UIElement.Visibility)">
                    <DiscreteObjectKeyFrame KeyTime="00:00:00"
                                            Value="{x:Static Visibility.Visible}" />


                </ObjectAnimationUsingKeyFrames>

            </Storyboard>

            <Storyboard x:Key="HideDtlStoryBoard">

                <ObjectAnimationUsingKeyFrames BeginTime="00:00:00"
                                               Storyboard.TargetName="brdrDtl"
                                               Storyboard.TargetProperty="(UIElement.Visibility)">
                    <DiscreteObjectKeyFrame KeyTime="00:00:00.8000000"
                                            Value="{x:Static Visibility.Collapsed}" />

                </ObjectAnimationUsingKeyFrames>

            </Storyboard>

            <Storyboard x:Key="orgAnim">
                <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)"
                                                  Storyboard.TargetName="toggleButton">
                    <EasingThicknessKeyFrame KeyTime="0:0:1"
                                             Value="-330,10,10,10">
                        <EasingThicknessKeyFrame.EasingFunction>
                            <ExponentialEase EasingMode="EaseOut"
                                             Exponent="9" />
                        </EasingThicknessKeyFrame.EasingFunction>
                    </EasingThicknessKeyFrame>
                </ThicknessAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Height)"
                                               Storyboard.TargetName="stackPanel">
                    <EasingDoubleKeyFrame KeyTime="0:0:1"
                                          Value="360">
                        <EasingDoubleKeyFrame.EasingFunction>
                            <ExponentialEase Exponent="9"
                                             EasingMode="EaseInOut" />
                        </EasingDoubleKeyFrame.EasingFunction>
                    </EasingDoubleKeyFrame>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>

            <Storyboard x:Key="collapseOrgAnim">

                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Height)"
                                               Storyboard.TargetName="stackPanel">
                    <EasingDoubleKeyFrame KeyTime="0:0:1"
                                          Value="0">
                        <EasingDoubleKeyFrame.EasingFunction>
                            <ExponentialEase Exponent="9"
                                             EasingMode="EaseInOut" />
                        </EasingDoubleKeyFrame.EasingFunction>
                    </EasingDoubleKeyFrame>
                </DoubleAnimationUsingKeyFrames>

                <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)"
                                                  Storyboard.TargetName="toggleButton">
                    <EasingThicknessKeyFrame KeyTime="0:0:1"
                                             Value="10,10,10,10">
                        <EasingThicknessKeyFrame.EasingFunction>
                            <ExponentialEase EasingMode="EaseOut"
                                             Exponent="9" />
                        </EasingThicknessKeyFrame.EasingFunction>
                    </EasingThicknessKeyFrame>
                </ThicknessAnimationUsingKeyFrames>
            </Storyboard>

            <Storyboard x:Key="rotateSetting"
                        RepeatBehavior="Forever" />

            <Storyboard x:Key="showStatusBar">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Height)"
                                               Storyboard.TargetName="border2">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.3"
                                          Value="30">
                        <EasingDoubleKeyFrame.EasingFunction>
                            <ExponentialEase Exponent="9" />
                        </EasingDoubleKeyFrame.EasingFunction>
                    </EasingDoubleKeyFrame>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>

            <Storyboard x:Key="hideStatusBar">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Height)"
                                               Storyboard.TargetName="border2">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.3"
                                          Value="0">
                        <EasingDoubleKeyFrame.EasingFunction>
                            <ExponentialEase Exponent="9" />
                        </EasingDoubleKeyFrame.EasingFunction>
                    </EasingDoubleKeyFrame>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>

            <Storyboard x:Key="showSupportMenu">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Height)"
                                               Storyboard.TargetName="supportStackPanel">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.3"
                                          Value="180" />
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>

            <Storyboard x:Key="hideSupportMenu">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Height)"
                                               Storyboard.TargetName="supportStackPanel">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.3"
                                          Value="0" />
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>
            <Style TargetType="{x:Type Image}">

                <Setter Property="FlowDirection"
                        Value="LeftToRight" />

            </Style>





            <Storyboard x:Key="SettingPages_Enter">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)"
                                               Storyboard.TargetName="stackPanel">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.1"
                                          Value="0" />
                </DoubleAnimationUsingKeyFrames>
                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                               Storyboard.TargetName="stackPanel">
                    <DiscreteObjectKeyFrame KeyTime="0:0:0.1"
                                            Value="{x:Static Visibility.Collapsed}" />
                </ObjectAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                                               Storyboard.TargetName="grid">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.3"
                                          Value="0" />
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)"
                                               Storyboard.TargetName="grid">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.3"
                                          Value="1" />
                </DoubleAnimationUsingKeyFrames>
                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                               Storyboard.TargetName="grid">
                    <DiscreteObjectKeyFrame KeyTime="0"
                                            Value="{x:Static Visibility.Visible}" />
                </ObjectAnimationUsingKeyFrames>
            </Storyboard>
            <Storyboard x:Key="SettingPages_Leave">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)"
                                               Storyboard.TargetName="stackPanel">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.3"
                                          Value="1" />
                </DoubleAnimationUsingKeyFrames>
                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                               Storyboard.TargetName="stackPanel">
                    <DiscreteObjectKeyFrame KeyTime="0">
                        <DiscreteObjectKeyFrame.Value>
                            <Visibility>Visible</Visibility>
                        </DiscreteObjectKeyFrame.Value>
                    </DiscreteObjectKeyFrame>
                </ObjectAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                                               Storyboard.TargetName="grid">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.3"
                                          Value="-35" />
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)"
                                               Storyboard.TargetName="grid">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.3"
                                          Value="0" />
                </DoubleAnimationUsingKeyFrames>
                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                               Storyboard.TargetName="grid">
                    <DiscreteObjectKeyFrame KeyTime="0:0:0.3"
                                            Value="{x:Static Visibility.Collapsed}" />
                </ObjectAnimationUsingKeyFrames>
            </Storyboard>
            <Storyboard x:Key="Structure_Expand">
                <DoubleAnimation Duration="0:0:0.2"
                                 To="1"
                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                 Storyboard.TargetName="gStructure">
                    <DoubleAnimation.EasingFunction>
                        <CircleEase EasingMode="EaseOut" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
                <DoubleAnimation Duration="0:0:0.2"
                                 To="1"
                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                 Storyboard.TargetName="gStructure">
                    <DoubleAnimation.EasingFunction>
                        <CircleEase EasingMode="EaseOut" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>
            <Storyboard x:Key="Structure_Collapse">
                <DoubleAnimation Duration="0:0:0.2"
                                 To="0"
                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                 Storyboard.TargetName="gStructure" />
                <DoubleAnimation Duration="0:0:0.2"
                                 To="0"
                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                 Storyboard.TargetName="gStructure" />
            </Storyboard>
            <Storyboard x:Key="OfficeStructure_Expand">
                <DoubleAnimation Duration="0:0:0.4"
                                 To="1"
                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                 Storyboard.TargetName="gOfficeStructure">
                    <DoubleAnimation.EasingFunction>
                        <CircleEase EasingMode="EaseOut" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
                <DoubleAnimation Duration="0:0:0.4"
                                 To="1"
                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                 Storyboard.TargetName="gOfficeStructure">
                    <DoubleAnimation.EasingFunction>
                        <CircleEase EasingMode="EaseOut" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>
            <Storyboard x:Key="OfficeStructure_Collapse">
                <DoubleAnimation Duration="0:0:0.2"
                                 To="0"
                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                 Storyboard.TargetName="gOfficeStructure" />
                <DoubleAnimation Duration="0:0:0.2"
                                 To="0"
                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                 Storyboard.TargetName="gOfficeStructure" />
            </Storyboard>
            <Storyboard x:Key="Process_Expand">
                <DoubleAnimation Duration="0:0:0.2"
                                 To="1"
                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                 Storyboard.TargetName="gProcess">
                    <DoubleAnimation.EasingFunction>
                        <CircleEase EasingMode="EaseOut" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
                <DoubleAnimation Duration="0:0:0.2"
                                 To="1"
                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                 Storyboard.TargetName="gProcess">
                    <DoubleAnimation.EasingFunction>
                        <CircleEase EasingMode="EaseOut" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>
            <Storyboard x:Key="Process_Collapse">
                <DoubleAnimation Duration="0:0:0.2"
                                 To="0"
                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                 Storyboard.TargetName="gProcess" />
                <DoubleAnimation Duration="0:0:0.2"
                                 To="0"
                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                 Storyboard.TargetName="gProcess" />
            </Storyboard>
            <Storyboard x:Key="Home_Enter">
                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                               Storyboard.TargetName="Home">
                    <DiscreteObjectKeyFrame KeyTime="0"
                                            Value="{x:Static Visibility.Visible}" />
                </ObjectAnimationUsingKeyFrames>
                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                               Storyboard.TargetName="Report">
                    <DiscreteObjectKeyFrame KeyTime="0:0:0.4"
                                            Value="{x:Static Visibility.Collapsed}" />
                </ObjectAnimationUsingKeyFrames>
                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                               Storyboard.TargetName="Setting">
                    <DiscreteObjectKeyFrame KeyTime="0:0:0.4"
                                            Value="{x:Static Visibility.Collapsed}" />
                </ObjectAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)"
                                               Storyboard.TargetName="Home">
                    <EasingDoubleKeyFrame KeyTime="0"
                                          Value="0" />
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4"
                                          Value="1" />
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)"
                                               Storyboard.TargetName="Report">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4"
                                          Value="0" />
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)"
                                               Storyboard.TargetName="Setting">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4"
                                          Value="0" />
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                                               Storyboard.TargetName="Home">
                    <EasingDoubleKeyFrame KeyTime="0"
                                          Value="-700" />
                    <EasingDoubleKeyFrame KeyTime="0:0:0.8"
                                          Value="0">
                        <EasingDoubleKeyFrame.EasingFunction>
                            <CircleEase EasingMode="EaseOut" />
                        </EasingDoubleKeyFrame.EasingFunction>
                    </EasingDoubleKeyFrame>
                </DoubleAnimationUsingKeyFrames>
                <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.IsEnabled)"
                                                Storyboard.TargetName="Home">
                    <DiscreteBooleanKeyFrame KeyTime="0"
                                             Value="False" />
                    <DiscreteBooleanKeyFrame KeyTime="0:0:0.8"
                                             Value="True" />
                </BooleanAnimationUsingKeyFrames>
                <Int32AnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.ZIndex)"
                                              Storyboard.TargetName="Report">
                    <EasingInt32KeyFrame KeyTime="0"
                                         Value="-1" />
                </Int32AnimationUsingKeyFrames>
                <Int32AnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.ZIndex)"
                                              Storyboard.TargetName="Setting">
                    <EasingInt32KeyFrame KeyTime="0"
                                         Value="-1" />
                </Int32AnimationUsingKeyFrames>
                <Int32AnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.ZIndex)"
                                              Storyboard.TargetName="Home">
                    <EasingInt32KeyFrame KeyTime="0"
                                         Value="0" />
                    <EasingInt32KeyFrame KeyTime="0:0:0.4"
                                         Value="0" />
                </Int32AnimationUsingKeyFrames>
            </Storyboard>
            <Storyboard x:Key="Report_Enter">
                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                               Storyboard.TargetName="Report">
                    <DiscreteObjectKeyFrame KeyTime="0"
                                            Value="{x:Static Visibility.Visible}" />
                </ObjectAnimationUsingKeyFrames>
                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                               Storyboard.TargetName="Home">
                    <DiscreteObjectKeyFrame KeyTime="0:0:0.4"
                                            Value="{x:Static Visibility.Collapsed}" />
                </ObjectAnimationUsingKeyFrames>
                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                               Storyboard.TargetName="Setting">
                    <DiscreteObjectKeyFrame KeyTime="0:0:0.4"
                                            Value="{x:Static Visibility.Collapsed}" />
                </ObjectAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)"
                                               Storyboard.TargetName="Report">
                    <EasingDoubleKeyFrame KeyTime="0"
                                          Value="0" />
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4"
                                          Value="1" />
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)"
                                               Storyboard.TargetName="Home">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4"
                                          Value="0" />
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)"
                                               Storyboard.TargetName="Setting">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.4"
                                          Value="0" />
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)"
                                               Storyboard.TargetName="Report">
                    <EasingDoubleKeyFrame KeyTime="0"
                                          Value="-700" />
                    <EasingDoubleKeyFrame KeyTime="0:0:0.8"
                                          Value="0">
                        <EasingDoubleKeyFrame.EasingFunction>
                            <CircleEase EasingMode="EaseOut" />
                        </EasingDoubleKeyFrame.EasingFunction>
                    </EasingDoubleKeyFrame>
                </DoubleAnimationUsingKeyFrames>
                <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.IsEnabled)"
                                                Storyboard.TargetName="Report">
                    <DiscreteBooleanKeyFrame KeyTime="0"
                                             Value="False" />
                    <DiscreteBooleanKeyFrame KeyTime="0:0:0.8"
                                             Value="True" />
                </BooleanAnimationUsingKeyFrames>
                <Int32AnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.ZIndex)"
                                              Storyboard.TargetName="Home">
                    <EasingInt32KeyFrame KeyTime="0"
                                         Value="-1" />
                </Int32AnimationUsingKeyFrames>
                <Int32AnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.ZIndex)"
                                              Storyboard.TargetName="Setting">
                    <EasingInt32KeyFrame KeyTime="0"
                                         Value="-1" />
                </Int32AnimationUsingKeyFrames>
                <Int32AnimationUsingKeyFrames Storyboard.TargetProperty="(Panel.ZIndex)"
                                              Storyboard.TargetName="Report">
                    <EasingInt32KeyFrame KeyTime="0"
                                         Value="0" />
                    <EasingInt32KeyFrame KeyTime="0:0:0.4"
                                         Value="0" />
                </Int32AnimationUsingKeyFrames>
                <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.IsEnabled)"
                                                Storyboard.TargetName="Home">
                    <DiscreteBooleanKeyFrame KeyTime="0"
                                             Value="False" />
                </BooleanAnimationUsingKeyFrames>
                <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.IsEnabled)"
                                                Storyboard.TargetName="Setting">
                    <DiscreteBooleanKeyFrame KeyTime="0"
                                             Value="False" />
                </BooleanAnimationUsingKeyFrames>
            </Storyboard>
            <Storyboard x:Key="Setting_Enter">
                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                               Storyboard.TargetName="Setting">
                    <DiscreteObjectKeyFrame KeyTime="0"
                                            Value="{x:Static Visibility.Visible}" />
                </ObjectAnimationUsingKeyFrames>
                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                               Storyboard.TargetName="Report">
                    <DiscreteObjectKeyFrame KeyTime="0:0:0.4"
                                            Value="{x:Static Visibility.Collapsed}" />
                </ObjectAnimationUsingKeyFrames>
                <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                               Storyboard.TargetName="Home">
                    <DiscreteObjectKeyFrame KeyTime="0:0:0.4"
