<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:custom="clr-namespace:SSYM.OrgDsn.UI"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="{x:Type Image}">
        
        <Setter Property="FlowDirection"
                Value="LeftToRight"></Setter>
        
    </Style>

    <Style TargetType="{x:Type custom:BackgroundedImage}"
           x:Key="img48">

        <Setter Property="FlowDirection"
                Value="LeftToRight"></Setter>

        <Setter Property="Height"
                Value="48"></Setter>

        <Setter Property="Width"
                Value="48"></Setter>

    </Style>


    <Style TargetType="{x:Type custom:BackgroundedImage}"
           x:Key="img32">

        <Setter Property="FlowDirection"
                Value="LeftToRight"></Setter>

        <Setter Property="Height"
                Value="32"></Setter>

        <Setter Property="Width"
                Value="32"></Setter>

    </Style>


    <Style TargetType="{x:Type Image}"
           BasedOn="{StaticResource {x:Type Image}}"
           x:Key="Image01">
        
        <Setter Property="Height"
                Value="48"></Setter>

        <Setter Property="Width"
                Value="48"></Setter> 

    </Style>

    <Style TargetType="{x:Type Image}"
           BasedOn="{StaticResource {x:Type Image}}"
           x:Key="MenuImageStyle">

        <Setter Property="Height"
                Value="70"></Setter>

        <Setter Property="Width"
                Value="70"></Setter>

    </Style>
    
    
    <Style x:Key="ImageStyle2" TargetType="{x:Type Image}">


    	<Setter Property="Source"
    		Value="{StaticResource addItmImage}" />

    </Style>

</ResourceDictionary>