                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type GroupBox}">

        <Setter Property="BorderBrush"
                Value="{DynamicResource appClr1}"></Setter>

        <Setter Property="Foreground"
