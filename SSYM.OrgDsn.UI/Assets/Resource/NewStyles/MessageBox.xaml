<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:toolkit="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="XceedMessageBox"
           TargetType="toolkit:MessageBox">
        <Setter Property="FlowDirection"
                Value="RightToLeft"></Setter>
        <Setter Property="FontSize"
                Value="16"></Setter>

        <Setter Property="FontFamily"
                Value="{DynamicResource mainFontFamily}"></Setter>

        <Setter Property="OkButtonContent"
                Value="تایید"></Setter>

        <Setter Property="CancelButtonContent"
                Value="انصراف"></Setter>

        <Setter Property="YesButtonContent"
                Value="بله"></Setter>

        <Setter Property="NoButtonContent"
                Value="خیر"></Setter>

    </Style>

</ResourceDictionary>