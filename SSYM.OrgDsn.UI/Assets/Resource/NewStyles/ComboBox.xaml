<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:Microsoft_Windows_Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:codeBehind="clr-namespace:SSYM.OrgDsn.UI"
                    xmlns:params="http://schemas.codeplex.com/elysium/params"
                    xmlns:metro="http://schemas.codeplex.com/elysium"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
                    x:Class="SSYM.OrgDsn.ComboStyle">

    <Style TargetType="telerik:RadComboBox"
           x:Key="MetroComboBox">

        <Setter Property="FontFamily"
                Value="B Roya"></Setter>
        <Setter Property="FontSize"
                Value="16"></Setter>
        <Setter Property="telerik:StyleManager.Theme"
                Value="Windows8"></Setter>
        <Setter Property="IsTextSearchEnabled"
                Value="True"></Setter>

        <Setter Property="Foreground"
                Value="{DynamicResource appClr1}"></Setter>

        <Setter Property="Height"
                Value="30"></Setter>

    </Style>
    <Style TargetType="telerik:RadComboBox">

        <Setter Property="FontFamily"
                Value="B Roya"></Setter>
        <Setter Property="FontSize"
                Value="16"></Setter>
        <Setter Property="telerik:StyleManager.Theme"
                Value="Windows8"></Setter>
        <Setter Property="IsTextSearchEnabled"
                Value="True"></Setter>

        <Setter Property="Foreground"
                Value="{DynamicResource appClr1}"></Setter>

        <Setter Property="Height"
                Value="30"></Setter>
    </Style>

</ResourceDictionary>