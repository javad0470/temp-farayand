<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                    xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions">

    <Style x:Key="Border01"
           TargetType="{x:Type Border}">

        <Setter Property="Background"
                Value="Transparent"></Setter>

        <Setter Property="BorderBrush"
                Value="{DynamicResource color09}"></Setter>

        <Setter Property="BorderThickness"
                Value="0,2,0,0"></Setter>

    </Style>

    <Style x:Key="Border02"
           TargetType="{x:Type Border}">

        <Setter Property="Background"
                Value="Transparent"></Setter>

        <Setter Property="BorderBrush"
                Value="Transparent"></Setter>

        <Setter Property="BorderThickness"
                Value="1"></Setter>

    </Style>

    <Style x:Key="Border03"
           TargetType="{x:Type Border}">

        <Setter Property="Background"
                Value="White"></Setter>

        <Setter Property="BorderBrush"
                Value="{DynamicResource appClr2}"></Setter>

        <Setter Property="BorderThickness"
                Value="1"></Setter>

        <Style.Triggers>

            <EventTrigger RoutedEvent="Loaded">

                <BeginStoryboard>

                    <Storyboard>

                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)">
                            <EasingDoubleKeyFrame KeyTime="0"
                                                  Value="0" />
                            <EasingDoubleKeyFrame KeyTime="0:0:0.5"
                                                  Value="1" />
                        </DoubleAnimationUsingKeyFrames>

                    </Storyboard>

                </BeginStoryboard>

                <BeginStoryboard>

                    <Storyboard>

                        <ThicknessAnimation Storyboard.TargetProperty="(FrameworkElement.Margin)"
                                            Duration="0:0:1"
                                            From="0,200,0,0"
                                            To="0,0,0,0">

                            <ThicknessAnimation.EasingFunction>

                                <ExponentialEase Exponent="12"
                                                 EasingMode="EaseOut"></ExponentialEase>

                            </ThicknessAnimation.EasingFunction>

                        </ThicknessAnimation>

                    </Storyboard>

                </BeginStoryboard>

            </EventTrigger>

        </Style.Triggers>

    </Style>

    <Style x:Key="Border04"
           TargetType="{x:Type Border}">

        <Setter Property="Background"
                Value="Transparent"></Setter>

        <Setter Property="BorderBrush"
                Value="#FF3B9652"></Setter>

        <Setter Property="BorderThickness"
                Value="0"></Setter>

        <Style.Triggers>

            <EventTrigger RoutedEvent="Loaded">

                <BeginStoryboard>

                    <Storyboard>

                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)">
                            <EasingDoubleKeyFrame KeyTime="0"
                                                  Value="0" />
                            <EasingDoubleKeyFrame KeyTime="0:0:0.5"
                                                  Value="1" />
                        </DoubleAnimationUsingKeyFrames>

                    </Storyboard>
                    
                </BeginStoryboard>                

            </EventTrigger>

        </Style.Triggers>

    </Style>

    <Style x:Key="AddEvtRstAndSrtBorderStyle"
           TargetType="{x:Type Border}">

        <Setter Property="Background"
                Value="Transparent"></Setter>

        <Setter Property="BorderBrush"
                Value="{DynamicResource appClr1}"></Setter>

        <Setter Property="BorderThickness"
                Value="0,0,1,0"></Setter>

        <Style.Triggers>

            <EventTrigger RoutedEvent="Loaded">

                <BeginStoryboard>

                    <Storyboard>

                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)">
                            <EasingDoubleKeyFrame KeyTime="0"
                                                  Value="0" />
                            <EasingDoubleKeyFrame KeyTime="0:0:0.5"
                                                  Value="1" />
                        </DoubleAnimationUsingKeyFrames>

                    </Storyboard>

                </BeginStoryboard>

            </EventTrigger>

        </Style.Triggers>

    </Style>

    <Style TargetType="{x:Type Border}"
           x:Key="DetailBorderStyle">

        <Setter Property="Background"
                Value="Transparent"></Setter>

        <Setter Property="BorderBrush"
                Value="{DynamicResource color09}"></Setter>

        <Setter Property="BorderThickness"
                Value="0"></Setter>
        
        <Style.Triggers>
            
            <EventTrigger RoutedEvent="Loaded">

                <BeginStoryboard>

                    <Storyboard>

                        <ThicknessAnimation Storyboard.TargetProperty="(FrameworkElement.Margin)"
                                            Duration="0:0:1"
                                            From="200,0,0,0"
                                            To="0,0,0,0">
                            
                            <ThicknessAnimation.EasingFunction>
                                
                                <ExponentialEase Exponent="12" EasingMode="EaseOut"></ExponentialEase>
                                
                            </ThicknessAnimation.EasingFunction>

                        </ThicknessAnimation>

                    </Storyboard>

                </BeginStoryboard>

            </EventTrigger>

        </Style.Triggers>

    </Style>
    
    <Style TargetType="{x:Type Border}"
           x:Key="PopupFromBorderStyle">
        
        <Setter Property="BorderBrush"
                Value="{DynamicResource PopupBorderBrush}"></Setter>

        <Setter Property="Background"
                Value="{DynamicResource PopupBorderBackground}"></Setter>
        
        <Setter Property="HorizontalAlignment"
                Value="Stretch"></Setter>

        <Setter Property="VerticalAlignment"
                Value="Stretch"></Setter>

        <Setter Property="Margin"
                Value="0,0,0,10"></Setter>

    </Style>
    
    <Style TargetType="{x:Type Border}"
           x:Key="PopupContainerBorderStyle">
        
        <Setter Property="Margin"
                Value="15"></Setter>
        
        <Setter Property="Effect">
            
            <Setter.Value>

                <DropShadowEffect BlurRadius="15"
                                  Color="Black"
                                  ShadowDepth="0"></DropShadowEffect>

            </Setter.Value>
            
        </Setter>
        
    </Style>

</ResourceDictionary>