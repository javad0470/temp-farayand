                    <TextBlock Text="{Binding TblWayAwr_RecvInt.TblWayIfrm_SndOut.TblObj.FldNamObj, Mode=OneWay}"
                               Style="{StaticResource UserDefinedTextBlockStyle}"
                               Margin="6"
                               MinWidth="200"></TextBlock>

                    <Button x:Name="btnSlcInt"
                            Style="{StaticResource CommonBtnStyle}"
                            Command="{Binding SelectInputPopupIsOpenCommand, Mode=TwoWay}">

                        <custom:BackgroundedImage Source="{StaticResource addItmImage}" />

                    </Button>

                </StackPanel>

                <TextBlock Text="فعالیت مبدأ:"
                           Style="{DynamicResource TextBlockForPopupBodyStyle}"
                           Grid.Column="0"
                           Grid.Row="1"></TextBlock>

                <TextBlock Text="{Binding TblEvtSrt.PreviousActivityName, Mode=OneWay}"
                           Style="{StaticResource UserDefinedTextBlockStyle}"
                           Margin="6"
                           Grid.Column="1"
                           Grid.Row="1"></TextBlock>

                <TextBlock Text="مجری مبدأ:"
                           Style="{DynamicResource TextBlockForPopupBodyStyle}"
                           Grid.Column="0"
                           Grid.Row="2"></TextBlock>

                <TextBlock Text="{Binding TblEvtSrt.PreviousActivityPerformer, Mode=OneWay}"
                           Style="{StaticResource UserDefinedTextBlockStyle}"
                           Margin="6"
                           Grid.Column="1"
                           Grid.Row="2"></TextBlock>

            </Grid>

            <StackPanel Grid.Row="1">

                <GroupBox Header="نوع ورودی">

                    <StackPanel Orientation="Horizontal">

                        <RadioButton Content="نامه"
                                     IsChecked="{Binding IsMail, Mode=TwoWay}"></RadioButton>

                        <RadioButton Content="فرم"
                                     IsChecked="{Binding IsForm, Mode=TwoWay}"></RadioButton>

                        <RadioButton Content="فایل"
                                     IsChecked="{Binding IsFile, Mode=TwoWay}"></RadioButton>

                        <RadioButton Content="کالا"
                                     IsChecked="{Binding IsGoods, Mode=TwoWay}"></RadioButton>

                        <RadioButton Content="نیروی انسانی"
                                     IsChecked="{Binding IsHuman, Mode=TwoWay}"></RadioButton>

                        <RadioButton Content="ساختمان و تأسیسات"
                                     IsChecked="{Binding IsBuilding, Mode=TwoWay}"></RadioButton>

                    </StackPanel>

                </GroupBox>

                <GroupBox Header="جزئیات دریافت">

                    <StackPanel>

                        <StackPanel Orientation="Horizontal">

                            <TextBlock Text="میزان دریافتی در هر دریافت:"
                                       Style="{DynamicResource TextBlockForPopupBodyStyle}"></TextBlock>

                            <telerik:RadComboBox ItemsSource="{Binding CompareTools}"
                                                 Style="{StaticResource MetroComboBox}"
                                                 Width="150"
                                                 SelectedValuePath="FldCodItm"
                                                 DisplayMemberPath="FldNamItm"
                                                 SelectedValue="{Binding TblWayAwr_RecvInt.FldCodCmrIntPerRecv, Mode=TwoWay}"></telerik:RadComboBox>

                            <TextBox Text="{Binding TblWayAwr_RecvInt.FldTnoIntPerRecv, Mode=TwoWay}"
                                     Name="txtIntPerRecv"
                                     Margin="6"
                                     Width="60"
                                     PreviewTextInput="txtIntPerRecv_TextInput_1"
                                     FlowDirection="LeftToRight"></TextBox>

                            <TextBlock Text="{Binding NamUntMsrt, Mode=OneWay}"
                                       Margin="6"
                                       Style="{StaticResource UserDefinedTextBlockStyle}"
                                       MinWidth="150"></TextBlock>

                            <Button x:Name="btnSlcUnt"
                                    Style="{StaticResource CommonBtnStyle}"
                                    Command="{Binding SelectUntPopupIsOpenCommand}">

                                <custom:BackgroundedImage Source="{StaticResource addItmImage}" />

                            </Button>

                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ورودی نیاز به پردازش:"
                                       Style="{DynamicResource TextBlockForPopupBodyStyle}"></TextBlock>

                            <telerik:RadComboBox Name="cmbNeedPrs"
                                                 ItemsSource="{Binding ProgressingNeeded}"
                                                 SelectedIndex="0"
                                                 Style="{StaticResource MetroComboBox}"
                                                 Width="60"
                                                 SelectedValuePath="FldCodItm"
                                                 DisplayMemberPath="FldNamItm"
                                                 SelectedValue="{Binding TblWayAwr_RecvInt.FldIntNeedPrsg, Mode=TwoWay}">

                                <i:Interaction.Triggers>
                                    <ei:DataTrigger Binding="{Binding SelectedIndex, ElementName=cmbNeedPrs}"
                                                    Value="0">
                                        <ei:ChangePropertyAction PropertyName="IsEnabled"
                                                                 Value="True"
                                                                 TargetName="stkPrsDtl">
                                        </ei:ChangePropertyAction>

                                    </ei:DataTrigger>

                                    <ei:DataTrigger Binding="{Binding SelectedIndex, ElementName=cmbNeedPrs}"
                                                    Value="1">
                                        <ei:ChangePropertyAction PropertyName="IsEnabled"
                                                                 Value="False"
                                                                 TargetName="stkPrsDtl">
                                        </ei:ChangePropertyAction>

                                    </ei:DataTrigger>

                                </i:Interaction.Triggers>
                            </telerik:RadComboBox>

                        </StackPanel>

                        <StackPanel Name="stkPrsDtl"
                                    Orientation="Horizontal">

                            <TextBlock Text="میزان مورد نیاز در هر پردازش:"
                                       Style="{DynamicResource TextBlockForPopupBodyStyle}"></TextBlock>

                            <telerik:RadNumericUpDown Value="{Binding TblWayAwr_RecvInt.FldTnoIntPerPrsg, Mode=TwoWay}"
                                                      Margin="6"
                                                      HorizontalContentAlignment="Left"
                                                      Width="50"></telerik:RadNumericUpDown>

                            <TextBlock Text="نوع پردازش:"
                                       Style="{DynamicResource TextBlockForPopupBodyStyle}"></TextBlock>

                            <telerik:RadComboBox ItemsSource="{Binding TypeOfProcessing}"
                                                 Style="{StaticResource MetroComboBox}"
                                                 SelectedValuePath="FldCodItm"
                                                 DisplayMemberPath="FldNamItm"
                                                 SelectedValue="{Binding TblWayAwr_RecvInt.FldCodTypPrsg, Mode=TwoWay}"></telerik:RadComboBox>

                            <TextBlock Text="نحوه پردازش:"
                                       Style="{DynamicResource TextBlockForPopupBodyStyle}"></TextBlock>

                            <telerik:RadComboBox ItemsSource="{Binding WayOfProcessing}"
                                                 Style="{StaticResource MetroComboBox}"
                                                 SelectedValuePath="FldCodItm"
                                                 DisplayMemberPath="FldNamItm"
                                                 SelectedValue="{Binding TblWayAwr_RecvInt.FldCodWayPrsg, Mode=TwoWay}"></telerik:RadComboBox>

                        </StackPanel>

                    </StackPanel>

                </GroupBox>

            </StackPanel>

        </Grid>

    </Border>

</UserControl>

