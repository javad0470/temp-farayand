<UserControl x:Class="SSYM.OrgDsn.UI.View.ActivityDefinition.UserCtl.AddEtyPnl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             FlowDirection="RightToLeft"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="200">
    
    <Border Style="{StaticResource Border01}">
        
        <Grid>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Image Stretch="None"
                   Name="imgAct"
                   telerik:DragDropManager.AllowDrag="True"
                   Cursor="Hand"
                   Tag="act"
                   Margin="0,10"
                   Source="{StaticResource actAddImage}"
                   Grid.Row="0"
                   Grid.Column="1"/>
            
            <Image Stretch="None"                
                   telerik:DragDropManager.AllowDrag="True"
                   Name="imgEvtSrt"
                   Cursor="Hand"
                   Tag="evtSrt"
                   Margin="0,10"
                   Source="{StaticResource evtSrtAdd}"
                   Grid.Row="1"
                   Grid.Column="1"></Image>
            
            <Image Stretch="None"
                   telerik:DragDropManager.AllowDrag="True"
                   Name="imgEvtRst"
                   Cursor="Hand"
                   Tag="evtRst"
                   Source="{StaticResource evtRstAdd}"
                   Grid.Row="2"
                   Grid.Column="1"></Image>
            
        </Grid>
        
    </Border>
    
</UserControl>
