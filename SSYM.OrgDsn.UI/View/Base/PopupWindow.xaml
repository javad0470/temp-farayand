<Window  x:Class="SSYM.OrgDsn.UI.View.Base.PopupWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:popup="clr-namespace:SSYM.OrgDsn.UI.View.ActivityDefinition.Popup"
         BorderBrush="Transparent"
         SizeToContent="WidthAndHeight"
         BorderThickness="0"
         WindowStyle="None"
         Background="{x:Null}"
         ResizeMode="NoResize"
         AllowsTransparency="True">

    <Border Background="white"
            BorderBrush="{DynamicResource appClr1}" BorderThickness="5" MouseLeftButtonDown="UIElement_MouseLeftButtonDown">
        <Grid Margin="0,5,0,0">
            <popup:BasePopup x:Name="basePopup"
                             Margin="6" />
        </Grid>
    </Border>
</Window>
