<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:metro="http://schemas.codeplex.com/elysium"
        xmlns:params="http://schemas.codeplex.com/elysium/params"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:UI="clr-namespace:SSYM.OrgDsn.UI"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="SSYM.OrgDsn.UI.View.UserSetting.UISettings"
        FlowDirection="RightToLeft"
        Width="550"
        Height="370">
    <UserControl.Resources>
        <ControlTemplate x:Key="ToggleButtonControlTemplate1"
                         TargetType="{x:Type ToggleButton}">
            <ControlTemplate.Resources>
                <Storyboard x:Key="mouseEnter">
                    <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)"
                                                   Storyboard.TargetName="border">
                        <EasingDoubleKeyFrame KeyTime="0:0:0.1"
                                              Value="1" />
                    </DoubleAnimationUsingKeyFrames>
                    <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                   Storyboard.TargetName="grid">
                        <EasingDoubleKeyFrame KeyTime="0:0:0.1"
                                              Value="1.2" />
                    </DoubleAnimationUsingKeyFrames>
                    <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                   Storyboard.TargetName="grid">
                        <EasingDoubleKeyFrame KeyTime="0:0:0.1"
                                              Value="1.2" />
                    </DoubleAnimationUsingKeyFrames>
                </Storyboard>
                <Storyboard x:Key="mouseLeave">
                    <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)"
                                                   Storyboard.TargetName="border">
                        <EasingDoubleKeyFrame KeyTime="0:0:0.2"
                                              Value="0" />
                    </DoubleAnimationUsingKeyFrames>
                    <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                                   Storyboard.TargetName="grid">
                        <EasingDoubleKeyFrame KeyTime="0:0:0.2"
                                              Value="1" />
                    </DoubleAnimationUsingKeyFrames>
                    <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                                   Storyboard.TargetName="grid">
                        <EasingDoubleKeyFrame KeyTime="0:0:0.2"
                                              Value="1" />
                    </DoubleAnimationUsingKeyFrames>
                </Storyboard>
                <Storyboard x:Key="checked">
                    <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(Border.BorderThickness)"
                                                      Storyboard.TargetName="border1">
                        <EasingThicknessKeyFrame KeyTime="0"
                                                 Value="5" />
                    </ThicknessAnimationUsingKeyFrames>
                </Storyboard>
                <Storyboard x:Key="unchecked">
                    <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(Border.BorderThickness)"
                                                      Storyboard.TargetName="border1">
                        <EasingThicknessKeyFrame KeyTime="0"
                                                 Value="1" />
                    </ThicknessAnimationUsingKeyFrames>
                </Storyboard>
            </ControlTemplate.Resources>
            <Grid x:Name="grid"
                  RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Grid.RenderTransform>
                <Border x:Name="border1"
                        BorderThickness="1"
                        BorderBrush="#99474747"
                        Background="{TemplateBinding Background}" />
                <Border x:Name="border"
                        BorderThickness="1"
                        BorderBrush="#FF006AC5"
                        Opacity="0">
                    <Border.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="#4C008BFF"
                                          Offset="1" />
                            <GradientStop Color="#0C7FC5FF" />
                        </RadialGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>
            <ControlTemplate.Triggers>
                <EventTrigger RoutedEvent="Mouse.MouseEnter">
                    <BeginStoryboard x:Name="mouseEnter_BeginStoryboard"
                                     Storyboard="{StaticResource mouseEnter}" />
                </EventTrigger>
                <EventTrigger RoutedEvent="Mouse.MouseLeave">
                    <BeginStoryboard x:Name="mouseLeave_BeginStoryboard"
                                     Storyboard="{StaticResource mouseLeave}" />
                </EventTrigger>
                <Trigger Property="Tag"
                         Value="1">
                    <Setter TargetName="border1"
                            Property="BorderThickness"
                            Value="5" />
                    <Setter TargetName="border1"
                            Property="BorderBrush"
                            Value="{DynamicResource appClr2}" />
                    <!--<Trigger.EnterActions>
                        <BeginStoryboard x:Name="checked_BeginStoryboard"
                                         Storyboard="{StaticResource checked}" />
                    </Trigger.EnterActions>-->
                </Trigger>
                <!--<Trigger Property="Tag"
                         Value="0">
                    <Trigger.EnterActions>
                        <BeginStoryboard x:Name="unchecked_BeginStoryboard"
                                         Storyboard="{StaticResource unchecked}" />
                    </Trigger.EnterActions>
                </Trigger>-->
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </UserControl.Resources>
    <Grid Margin="0">
        <Grid Margin="36,66,36,36"
              Visibility="Collapsed">

            <Grid.Resources>
                <Style TargetType="{x:Type Rectangle}">

                    <Setter Property="Width"
                            Value="50" />

                    <Setter Property="Height"
                            Value="50" />
                </Style>

                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment"
                            Value="Center" />

                    <Setter Property="Foreground"
                            Value="Black" />

                </Style>
            </Grid.Resources>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       x:Name="tbkC1"
                       Text="رنگ اصلی" />

            <Grid Grid.Row="1"
                  Height="70">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Rectangle Grid.Column="0"
                           x:Name="r01"
                           MouseUp="Rectangle_MouseUp_1"
                           Fill="#FFF09609" />

                <Rectangle Grid.Column="1"
                           x:Name="r02"
                           MouseUp="Rectangle_MouseUp_1"
                           Fill="#FF339933" />

                <Rectangle Grid.Column="2"
                           x:Name="r03"
                           MouseUp="Rectangle_MouseUp_1"
                           Fill="#FF3399FF" />

                <Rectangle  Grid.Column="3"
                            x:Name="r04"
                            MouseUp="Rectangle_MouseUp_1"
                            Fill="#FFFF0097" />
            </Grid>

            <TextBlock Grid.Row="2"
                       x:Name="tbkC2"
                       Text="رنگ مکمل" />

            <Grid Grid.Row="3"
                  Height="70">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Rectangle Grid.Column="0"
                           x:Name="r11"
                           MouseUp="Rectangle_MouseUp_2"
                           Fill="Red" />

                <Rectangle Grid.Column="1"
                           x:Name="r12"
                           MouseUp="Rectangle_MouseUp_2"
                           Fill="#FF00ABA9" />

                <Rectangle Grid.Column="2"
                           x:Name="r13"
                           MouseUp="Rectangle_MouseUp_2"
                           Fill="Blue" />

                <Rectangle  Grid.Column="3"
                            x:Name="r14"
                            MouseUp="Rectangle_MouseUp_2"
                            Fill="Gray" />

            </Grid>

            <TextBlock Grid.Row="4"
                       Foreground="{DynamicResource appClr1}"
                       Text="رنگ فونت ها" />

            <Grid Grid.Row="5"
                  Height="70">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Rectangle Grid.Column="0"
                           x:Name="r21"
                           MouseUp="Rectangle_MouseUp_3"
                           Fill="Red" />

                <Rectangle Grid.Column="1"
                           x:Name="r22"
                           MouseUp="Rectangle_MouseUp_3"
                           Fill="Green" />

                <Rectangle Grid.Column="2"
                           x:Name="r23"
                           MouseUp="Rectangle_MouseUp_3"
                           Fill="Blue" />

                <Rectangle  Grid.Column="3"
                            x:Name="r24"
                            MouseUp="Rectangle_MouseUp_3"
                            Fill="Gray" />

            </Grid>

        </Grid>
        <ToggleButton x:Name="Theme1"
                      Margin="24,108,372,108"
                      BorderThickness="1"
                      BorderBrush="#FF383838"
                      Template="{DynamicResource ToggleButtonControlTemplate1}"
                      RenderTransformOrigin="0.5,0.8"
                      Checked="Theme1_Checked"
                      Tag="1">
            <ToggleButton.Background>
                <ImageBrush ImageSource="/SSYM.OrgDsn.UI;component/Assets/img/Public/theme1.png" />
            </ToggleButton.Background>
        </ToggleButton>
        <ToggleButton x:Name="Theme2"
                      Margin="198,108"
                      BorderThickness="1"
                      BorderBrush="#FF383838"
                      Template="{DynamicResource ToggleButtonControlTemplate1}"
                      RenderTransformOrigin="0.5,0.8"
                      Checked="Theme2_Checked"
                      Tag="0">
            <ToggleButton.Background>
                <ImageBrush ImageSource="/SSYM.OrgDsn.UI;component/Assets/img/Public/theme2.png" />
            </ToggleButton.Background>
        </ToggleButton>
        <ToggleButton x:Name="Theme3"
                      Margin="372,108,24,108"
                      BorderThickness="1"
                      BorderBrush="#FF383838"
                      Template="{DynamicResource ToggleButtonControlTemplate1}"
                      RenderTransformOrigin="0.5,0.8"
                      Checked="Theme3_Checked"
                      Tag="0">
            <ToggleButton.Background>
                <ImageBrush ImageSource="/SSYM.OrgDsn.UI;component/Assets/img/Public/theme3.png" />
            </ToggleButton.Background>
        </ToggleButton>
    </Grid>
</UserControl>
