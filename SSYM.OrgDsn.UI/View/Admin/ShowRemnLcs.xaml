<UserControl x:Class="SSYM.OrgDsn.UI.View.Admin.ShowRemnLcs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="500"
        Width="650">
    <Grid FlowDirection="RightToLeft">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Name="grdNam">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Text="نام سازمان:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="10"
                       Grid.Row="0"
                       Grid.Column="0"
                       FontSize="36" />
            <TextBlock Text="{Binding NamOrg}"
                       HorizontalAlignment="Center"
                       Margin="10"
                       VerticalAlignment="Center"
                       Grid.Row="0"
                       Grid.Column="1"
                       FontSize="36" />


        </Grid>
        <Grid Name="grdlicenseInfo"
              Grid.Row="1"
              ShowGridLines="True"
              >

            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize"
                            Value="16" />

                    <Setter Property="FontFamily"
                            Value="B Koodak" />

                    <Setter Property="Margin"
                            Value="10,0" />

                </Style>
            </Grid.Resources>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock Text="حداکثر"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Grid.Row="0"
                       Grid.Column="1" />
            <TextBlock Text="مصرف شده"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Grid.Row="0"
                       Grid.Column="2" />
            <TextBlock Text="باقیمانده"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Grid.Row="0"
                       Grid.Column="3" />
            <TextBlock Text="تعداد کاربران:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Grid.Row="1"
                       Grid.Column="0" />

            <TextBlock Text="تعداد سازمان های تابعه:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Grid.Row="2"
                       Grid.Column="0" />
            <TextBlock Text="تعداد جایگاه و سمت سازمانی:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Grid.Row="3"
                       Grid.Column="0" />
            <TextBlock Text="تعداد فعالیت:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Grid.Row="4"
                       Grid.Column="0" />
            <TextBlock Text="تعداد فرآیند:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Grid.Row="5"
                       Grid.Column="0" />
            <TextBlock Text="تعداد گره های سازمان:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Grid.Row="6"
                       Grid.Column="0" />

            <!--MAX -->
            <TextBlock Text="{Binding max.TnoUsr}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="1"
                       Grid.Column="1" />

            <TextBlock Text="{Binding max.TnoOrgSub}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="2"
                       Grid.Column="1" />
            <TextBlock Text="{Binding max.MaxTnoPosPst}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="3"
                       Grid.Column="1" />
            <TextBlock Text="{Binding max.TnoAct}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="4"
                       Grid.Column="1" />
            <TextBlock Text="{Binding max.TnoPrs}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="5"
                       Grid.Column="1" />
            <TextBlock Text="{Binding max.TnoNod}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="6"
                       Grid.Column="1" />
            <!--used -->
            <TextBlock Text="{Binding used.TnoUsr}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="1"
                       Grid.Column="2" />

            <TextBlock Text="{Binding used.TnoOrgSub}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="2"
                       Grid.Column="2" />
            <TextBlock Text="{Binding used.MaxTnoPosPst}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="3"
                       Grid.Column="2" />
            <TextBlock Text="{Binding used.TnoAct}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="4"
                       Grid.Column="2" />
            <TextBlock Text="{Binding used.TnoPrs}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="5"
                       Grid.Column="2" />
            <TextBlock Text="{Binding used.TnoNod}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="6"
                       Grid.Column="2" />
            <!--remn -->
            <TextBlock Text="{Binding remn.TnoUsr}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="1"
                       Grid.Column="3" />

            <TextBlock Text="{Binding remn.TnoOrgSub}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="2"
                       Grid.Column="3" />
            <TextBlock Text="{Binding remn.MaxTnoPosPst}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="3"
                       Grid.Column="3" />
            <TextBlock Text="{Binding remn.TnoAct}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="4"
                       Grid.Column="3" />
            <TextBlock Text="{Binding remn.TnoPrs}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="5"
                       Grid.Column="3" />
            <TextBlock Text="{Binding remn.TnoNod}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="6"
                       Grid.Column="3" />
        </Grid>
    </Grid>
</UserControl>
