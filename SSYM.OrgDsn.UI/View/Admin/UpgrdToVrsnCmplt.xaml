<Window x:Class="SSYM.OrgDsn.UI.View.Admin.UpgrdToVrsnCmplt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        FlowDirection="RightToLeft"
        Title="ارتقاء به نسخه کامل"
        Height="400"
        Width="500">
    <Grid>
        <!-- **************************grdSerials************************* -->
        <Grid Name="grdCheckSerials"
              Grid.Row="1">

            <TextBlock Text="در حال حاضر سریال و کدفعالسازی معتبری برای نصب نرمافزار وجود ندارد"
                       Visibility="Collapsed"
                       Margin="10,0"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Name="tbkSerialNotFound"
                       Foreground="Red" />

            <Grid Name="grdCheckSerialsInner">
                <Grid.RowDefinitions>
                    <RowDefinition  Height="Auto" />
                    <RowDefinition  Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition  Height="0.5*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock Text="در صورت تایید سریال و کد فعال سازی زیر برای نصب مورد استفاده قرار خواهد گرفت."
                           FontSize="14"
                           Margin="10,0"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Grid.Row="0"
                           Grid.Column="0"
                           Grid.ColumnSpan="2">
                </TextBlock>

                <TextBlock Text="سریال نصب"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Grid.Row="1"
                           Grid.Column="0" />

                <TextBlock Text="کد فعال سازی"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Grid.Row="2"
                           Grid.Column="0" />

                <TextBox Name="txtSerial"
                         IsEnabled="False"
                         FlowDirection="LeftToRight"
                         Width="200"
                         Height="30"
                         Grid.Row="1"
                         Grid.Column="1" />

                <TextBox Name="txtActvnCod"
                         IsEnabled="False"
                         FlowDirection="LeftToRight"
                         Width="200"
                         Height="30"
                         Grid.Row="2"
                         Grid.Column="1" />

                <Button Grid.Row="3"
                        Width="100"
                        Height="35"
                        Grid.ColumnSpan="2"
                        Name="btncheckSerial"
                        Click="checkSerials_Click"
                        Content="ارتقاء" />

            </Grid>

        </Grid>

    </Grid>
</Window>
