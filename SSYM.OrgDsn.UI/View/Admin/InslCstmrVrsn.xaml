        <Border Grid.Row="2"
                Background="{DynamicResource appClr1}"
                BorderThickness="0,5,0,0"
                BorderBrush="{DynamicResource appClr2}">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">


                <Button VerticalAlignment="Bottom"
                        HorizontalAlignment="Left"
                        Width="110"
                        Height="30"
                        Margin="5"
                        Padding="0,-5,0,0"
                        Content="خروج"
                        Name="btn_Exit"
                        Click="Btn_Exit_OnClick"
                        FontFamily="B Koodak"
                        Style="{StaticResource btnDown}"
                        FontSize="22" />
                <Button VerticalAlignment="Bottom"
                        HorizontalAlignment="Left"
                        Width="110"
                        Height="30"
                        Margin="5"
                        Padding="0,-5,0,0"
                        Content="بعدی"
                        Name="btn_forward"
                        Visibility="Collapsed"
                        Click="Btn_forward_OnClick"
                        Style="{StaticResource btnDown}"
                        FontFamily="B Koodak"
                        FontSize="22" />
                <Button VerticalAlignment="Bottom"
                        HorizontalAlignment="Left"
                        Width="110"
                        Height="30"
                        Margin="5"
                        Padding="0,-5,0,0"
                        Visibility="Collapsed"
                        Style="{StaticResource btnDown}"
                        Content="بازگشت"
                        Name="btnBack"
                        Click="return_Click"
                        FontFamily="B Koodak"
                        FontSize="22" />

            </StackPanel>
        </Border>

    </Grid>
</Window>
