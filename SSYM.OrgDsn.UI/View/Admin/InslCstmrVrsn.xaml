                        Content="..." />
            </StackPanel>

            <Button Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Click="goToInstall_Click"
                    Content="ادامه" />-->

        </Grid>

        <!-- **************************Installing.....************************* -->
        <Grid Name="grdInstalling"
              Visibility="Visible"
              Grid.Row="1">
          
            <Button Content="شروع نصب"
                    Name="btnStartInstall2"
                    Click="startInstall_Click"
                    Background="{DynamicResource appClr1}"
                    Foreground="White"
                    Visibility="Visible"
                    FontFamily="B Koodak" />

            <StackPanel Visibility="Collapsed"
                        Name="stkInstallProgress">

                <TextBlock Name="lblInstallProgress"
                           Text="در حال نصب نرم افزار:"
                           Height="40"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Width="300"
                           Margin="90,138,0,0"
                           FontFamily="B Koodak"
                           FontSize="22" />
                <ProgressBar x:Name="prgsCopy"
                             Height="25"
                             IsIndeterminate="True"
                             HorizontalAlignment="Left"
                             Margin="90,0,0,0"
                             Width="500"
                             BorderBrush="{DynamicResource appClr2}"
                             Foreground="{DynamicResource appClr1}"
                             VerticalAlignment="Top" />

            </StackPanel>

            <Grid Visibility="Collapsed"
                  Grid.ColumnSpan="2"
                  Name="grdFinish"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock Name="lblFinish"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource appClr1}"
                           Text="نصب با موفقیت انجام شد."
                           Margin="10"
                           FontFamily="B Koodak"
                           FontSize="22"
                           Grid.Row="0" />

                <Button Grid.Row="1"
                        Click="finish_Click"
                        Content="خروج"
                        Background="{DynamicResource appClr1}"
                        Foreground="White"
                        FontFamily="B Koodak" />

            </Grid>

        </Grid>

