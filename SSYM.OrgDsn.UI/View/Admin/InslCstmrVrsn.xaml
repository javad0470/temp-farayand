            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                BorderBrush="{DynamicResource appClr2}"
                BorderThickness="0,0,0,4"
                Background="{DynamicResource appClr1}">
