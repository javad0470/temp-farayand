        <!-- **************************grdUserPass************************* -->
        <Grid Name="grdUserPass"
              Visibility="Collapsed"
              Grid.Row="1">

            <TextBlock Text="نام کاربری:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="106,108,0,0"
                       FontFamily="B Koodak"
                       FontSize="22"
                       Width="106" />
            <TextBlock Text="کلمه عبور:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       FontFamily="B Koodak"
                       FontSize="22"
                       Margin="106,172,0,0"
                       Width="106" />

            <TextBox Name="txtUsr"
                     FlowDirection="LeftToRight"
                     FontFamily="B Koodak"
                     FontSize="22"
                     Margin="294,107,0,0"
                     HorizontalAlignment="Left"
                     Width="240"
                     Height="38"
                     VerticalAlignment="Top" />

            <PasswordBox Name="txtPass"
                         FlowDirection="LeftToRight"
                         FontFamily="B Koodak"
                         FontSize="22"
                         Margin="294,171,0,0"
                         Height="39"
                         VerticalAlignment="Top"
                         HorizontalAlignment="Left"
                         Width="240" />

            <Button Click="authenticate_Click"
                    Content="ادامه"
                    FontFamily="B Koodak"
                    Visibility="Collapsed"
                    FontSize="22"
                    Margin="0,0,27,20"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" />

        </Grid>

        <!-- **************************grdSerials************************* -->
        <Grid Name="grdCheckSerials"
              Visibility="Collapsed"
              Grid.Row="1">

            <TextBlock Text="در حال حاضر سریال و کد فعالسازی معتبری برای نصب نرم افزار وجود ندارد."
                       FontSize="22"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Name="tbkSerialNotFound"
                       Visibility="Collapsed"
                       Foreground="Red"
                       FontFamily="#B Koodak" />

            <Grid Name="grdCheckSerialsInner">


                <TextBlock Text="در صورت تایید سریال و کد فعال سازی زیر برای نصب مورد استفاده قرار خواهد گرفت."
                           FontSize="20"
                           Margin="20,76,41,245"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontFamily="/SSYM.OrgDsn.UI;component/Fonts/#B Koodak">
                </TextBlock>

                <TextBlock Text="سریال نصب"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontFamily="/SSYM.OrgDsn.UI;component/Fonts/#B Koodak"
                           FontSize="22"
                           Margin="117,141,436,176" />

                <TextBlock Text="کد فعال سازی"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontFamily="/SSYM.OrgDsn.UI;component/Fonts/#B Koodak"
                           FontSize="22"
                           Margin="117,203,419,114" />

                <TextBox Name="txtSerial"
                         IsEnabled="False"
                         FlowDirection="LeftToRight"
                         Height="Auto"
                         FontFamily="/SSYM.OrgDsn.UI;component/Fonts/#B Koodak"
                         FontSize="22"
                         Margin="251,141,151,176" />

                <TextBox Name="txtActvnCod"
                         IsEnabled="False"
                         FlowDirection="LeftToRight"
                         Height="Auto"
                         FontFamily="/SSYM.OrgDsn.UI;component/Fonts/#B Koodak"
                         FontSize="22"
                         Margin="251,203,151,114" />

                <Button Name="btncheckSerial"
                        Click="checkSerials_Click"
                        Content="ادامه"
                        FontFamily="/SSYM.OrgDsn.UI;component/Fonts/#B Koodak"
                        FontSize="22"
                        Margin="391,263,51,43" />

            </Grid>

        </Grid>

        <!-- **************************Select Folder************************* -->
        <Grid Name="grdSlcDirectory"
              Visibility="Collapsed"
              Grid.Row="1">

            <TextBlock Text="مسیر نصب را انتخاب نمایید:"
                       FontFamily="B Koodak"
                       FontSize="16"
                       HorizontalAlignment="Left"
                       Width="545"
                       Margin="47,115,0,0"
                       Height="27"
                       VerticalAlignment="Top" />
            <TextBlock Text="مسیر نصب"
                       FontFamily="B Koodak"
                       FontSize="22"
                       HorizontalAlignment="Left"
                       Width="140"
                       Margin="47,164,0,0"
                       Height="38"
                       VerticalAlignment="Top" />

            <TextBox Width="400"
                     FlowDirection="LeftToRight"
                     Name="txtInstallPath"
                     Margin="137,164,0,0"
                     FontFamily="B Koodak"
                     FontSize="22"
                     Height="38"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left" />
            <Button Click="selectFolder_Click"
                    Width="50"
                    Height="38"
                    Content="..."
                    FontFamily="B Koodak"
                    FontSize="22"
                    Margin="542,164,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" />


            <Button Click="goToInstall_Click"
                    Content="ادامه"
                    FontFamily="B Koodak"
                    Visibility="Collapsed"
                    FontSize="22"
                    Margin="223,250,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left" />
            
            
         
            <!--<StackPanel Orientation="Horizontal"
                        Grid.Row="0"
                        FlowDirection="LeftToRight">
                <TextBox Width="400"
