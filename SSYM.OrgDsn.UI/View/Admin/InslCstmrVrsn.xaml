                    Click="btnStart_Click_1"
                    Background="{DynamicResource appClr1}"
                    Foreground="White"
                    FontFamily="B Koodak" />

        </Grid>

        <!-- **************************grdSetConnection************************* -->
        <Grid Name="grdSetConnection"
              Visibility="Collapsed"
              Grid.Column="0"
              Grid.Row="1">


            <TextBlock HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Text="نام سرور:"
                       FontFamily="B Koodak"
                       FontSize="22"
                       Margin="97,42,0,0" />

            <TextBox Name="txtServerName"
                     FlowDirection="LeftToRight"
                     Width="240"
                     FontFamily="B Koodak"
                     FontSize="22"
                     Margin="292,42,0,0"
                     HorizontalAlignment="Left"
                     Height="38"
                     VerticalAlignment="Top" />

            <TextBlock HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Text="نام پایگاه داده:"
                       FontFamily="B Koodak"
                       FontSize="22"
                       Margin="96,101,0,0" />

            <TextBlock HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Text="اعتبار سنجی:"
                       FontFamily="B Koodak"
                       FontSize="22"
                       Margin="96,161,0,0" />

            <TextBox Name="txtDBName"
                     FlowDirection="LeftToRight"
                     Width="240"
                     FontFamily="B Koodak"
                     FontSize="22"
                     Margin="292,101,0,0"
                     HorizontalAlignment="Left"
                     Height="38"
                     VerticalAlignment="Top" />

            <ComboBox Name="cmbMode"
                      FlowDirection="LeftToRight"
                      SelectionChanged="cmbMode_SelectionChanged_1"
                      Width="240"
                      FontFamily="B Koodak"
                      FontSize="14"
                      Margin="292,161,0,0"
                      HorizontalAlignment="Left"
                      Height="37"
                      VerticalAlignment="Top">
                <ComboBox.Items>
                    <ComboBoxItem  Content="Windows Authentication"
                                   IsSelected="True" />
                    <ComboBoxItem  Content="SQL Server Authentication" />
                </ComboBox.Items>
            </ComboBox>

            <Grid Name="sqlMode"
                  Visibility="Collapsed"
                  HorizontalAlignment="Left"
                  Width="436"
                  Height="96"
                  VerticalAlignment="Top"
                  Margin="96,222,0,0">

                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="نام کاربری:"
                           FontFamily="B Koodak"
                           FontSize="22"
                           Margin="0,0,353,58" />

                <TextBox Name="txtUsername"
                         FlowDirection="LeftToRight"
                         Width="240"
                         FontFamily="B Koodak"
                         FontSize="22"
                         Margin="196,0,0,58" />

                <TextBlock Text="گذرواژه:"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontFamily="B Koodak"
                           FontSize="22"
                           Margin="0,59,371,-1" />

                <PasswordBox Name="txtPassword"
                             FlowDirection="LeftToRight"
                             Width="240"
                             FontFamily="B Koodak"
                             FontSize="22"
                             Margin="196,59,0,-1" />

            </Grid>



            <Button Name="btnStartInstall"
                    Content="ادامه"
                    Click="connectToDB_Click"
                    Visibility="Collapsed"
                    Margin="419,329,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" />

        </Grid>




